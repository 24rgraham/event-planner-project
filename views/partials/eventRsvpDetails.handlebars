<div id="card" class="card p-2 mb-5" id="event-details" >
  {{#if event_photo}}
  <img src="https://res.cloudinary.com/dqv6cj4bc/image/upload/w_300,h_200,c_fill,q_100/{{event_photo}}" class="card-img-top" alt="...">
  {{else}}
  <img src="https://placebear.com/300/200" class="card-img-top" alt="...">
  {{/if}}
  <div class="card-body text-center">
    <a class="card-text text-capitalize font-weight-bold" id="card-title" href="/event/{{id}}"><span>{{name}}</span></a>
    <p class="card-text"> {{moment eventDate format="dddd, MMMM Do YYYY"}} <br> {{time}} </p>
  </div>
</div>